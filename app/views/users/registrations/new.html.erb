<h2 class="mb-5">求職者 新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :姓 %>
        <%= f.text_field :familyName %>
      </div>
    </div>  
    <div class="col">
      <div class="field">
        <%= f.label :名 %>
        <%= f.text_field :lastName %>
      </div>
    </div>
  </div>  
  
  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :セイ %>
        <%= f.text_field :familyNameDetail %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.label :メイ %>
        <%= f.text_field :lastNameDetail %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :性別 %>
        <%= f.select :gender, User.genders.keys, {} %>
      </div>
    </div>  
    <div class="col">
      <div class="field">
        <%= f.label :生年月日 %>
        <%= f.date_select(:birthdate, start_year: 1970, end_year: Date.today.year) %>
      </div>
    </div>  
    <div class="col">
      <div class="field">
        <%= f.label :居住地 %>
        <%= f.select :prefecture, User.prefectures.keys, {} %>
      </div>
    </div>
  </div>

  <div class="field mb-3">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

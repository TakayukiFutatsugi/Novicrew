<h2 class="mb-5">プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "clients/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :会社名 %>
    <%= f.text_field :name, class:"col-sm-6" %>
  </div>
  
  <div class="field mb-3">
    <%= f.label :ホームページ %>
    <%= f.text_field :homepage, class:"col-sm-6" %>
  </div>

  <div class="field mb-3">
    <%= f.label :業界 %>
    <%= f.text_field :industry, class:"col-sm-6" %>
  </div>
  
  <div class="field mb-3">
    <%= f.label :事業内容 %>
    <%= f.text_field :business, class:"col-sm-6" %>
  </div>
  
  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :従業員数 %>
        <%= f.text_field :staff %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.label :エンジニア数 %>
        <%= f.text_field :engineer %>
      </div>
    </div>
  </div>
  
  <div class="field mb-3">
    <%= f.label :本社所在地 %>
    <%= f.text_field :address, class:"col-sm-6" %>
  </div>  
     
  <div class="field mb-3">
    <%= f.label :会社紹介 %>
    <%= f.text_area :introduction, class:"col-sm-6" %>
  </div>
  
  <div class="field mb-3">
    <%= f.label :採用担当者名 %>
    <%= f.text_field :representativeName, class:"col-sm-6" %>
  </div>

  <div class="field mb-3">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="row mb-3">
    <div class="col">
      <div class="field">
        <%= f.label :パスワード %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="field mb-3">
    <%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p>Unhappy? <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<h2 class="mb-5">企業 ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, class:"col-8" %>
  </div>

  <div class="field mb-3">
    <%= f.label :パスワード %><br>
    <%= f.password_field :password, class:"col-8" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>

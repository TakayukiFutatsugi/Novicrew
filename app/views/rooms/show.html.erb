            </div>
          </div>
        <% else %><!-- メッセージがclientによるものだったら -->
          <div class="right-message mb-3"><!-- メッセージを右に寄せる -->
            <div>
              <%= m.content %>
            </div>  
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div>
  <%= form_for [@room, @message] do |f| %>
    <div>
      <%= f.text_area :content, class:"col-sm-10" %>
      <%= f.submit "送信" %>
    </div>
  <% end %>
</div>
